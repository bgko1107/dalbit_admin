        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="base" template="/WEB-INF/tiles/layout/default.jsp">
        <put-attribute name="header" value="/WEB-INF/tiles/layout/header.jsp" />
        <put-attribute name="navi" value="/WEB-INF/tiles/layout/navigation.jsp" />
        <put-attribute name="body" value="" />
    </definition>

    <definition name="*" extends="base">
        <put-attribute name="body" value="/WEB-INF/view/{1}.jsp" />
    </definition>

    <definition name="*/*" extends="base">
        <put-attribute name="body" value="/WEB-INF/view/{1}/{2}.jsp" />
    </definition>

    <definition name="*/*/*" extends="base">
        <put-attribute name="body" value="/WEB-INF/view/{1}/{2}/{3}.jsp" />
    </definition>

